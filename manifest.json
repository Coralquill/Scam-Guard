{
  "manifest_version": 3,
  "name": "ScamGuard",
  "version": "1.0",
  "permissions": ["activeTab"],
  "host_permissions": ["http://127.0.0.1:8000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
